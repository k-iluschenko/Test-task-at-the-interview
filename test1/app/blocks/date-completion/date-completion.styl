.container__data
	display flex
	flex-wrap wrap
.data__title
	position relative
	width 180px
	font-size 23px
	font-weight 700
	color #2f1b15
.data__content
	position absolute
	left 0
	bottom 0
.data__text
	margin-left 5px
	padding 0 10px
	font-family 'Courier New', sans-serif
	font-size 30px
	line-height 1.2
	border-bottom 10px solid transparent
	border-image url(../../img/border.png) 40 round